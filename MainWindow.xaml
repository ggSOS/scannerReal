<Window x:Class="scannerReal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:scannerReal"
        mc:Ignorable="d"
        Title="MainWindow" Height="768" Width="1360"
        WindowState="Maximized">
    <Grid Background="#1c2022">
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,50,0,0" TextWrapping="Wrap" Text="Scanner" FontSize="52" FontFamily="Century Gothic" FontWeight="Bold" Foreground="#91a3ad"/>
        <Border Background="#ed145b" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,130,0,0" Height="2" Width="40"/>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="190,100,0,0" TextWrapping="Wrap" Text="Real" FontSize="52" FontFamily="Century Gothic" FontWeight="Thin" Foreground="#91a3ad"/>

        <wv2:WebView2 x:Name="webView" Height="308" Width="544" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="40,200,0,0"/>

        <Button x:Name="testarButton" Click="testarButton_Click" Cursor="Hand" Content="Testar" HorizontalAlignment="Left" Margin="272,600,0,0" VerticalAlignment="Top" Height="40" Width="80" FontFamily="Century Gothic" Foreground="#ed145b"  FontSize="13" Background="#1c2022" BorderBrush="#ed145b" FontWeight="Bold"/>

        <Border Width="600" Height="500" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,200,40,0">
            <Grid>
                <TextBlock x:Name="descricaoGeralText" Text="texto" HorizontalAlignment="Left" VerticalAlignment="Top" Width="600" Margin="0,0,0,0" TextWrapping="Wrap" FontSize="17" FontFamily="Century Gothic" FontWeight="Light" Foreground="#616D72"/>

                <TextBlock x:Name="tituloTopico1Text" Text="texto" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,80,0,0" TextWrapping="Wrap" FontSize="22" FontFamily="Century Gothic" FontWeight="Bold" Foreground="#616D72"/>
                <TextBlock x:Name="descricaoTopico1Text" Text="texto" HorizontalAlignment="Left" VerticalAlignment="Top" Width="600" Margin="0,110,0,0" TextWrapping="Wrap" FontSize="17" FontFamily="Century Gothic" FontWeight="Light" Foreground="#616D72"/>

                <TextBlock x:Name="tituloTopico2Text" Text="texto" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,160,0,0" TextWrapping="Wrap" FontSize="22" FontFamily="Century Gothic" FontWeight="Bold" Foreground="#616D72"/>
                <TextBlock x:Name="descricaoTopico2Text" Text="texto" HorizontalAlignment="Left" VerticalAlignment="Top" Width="600" Margin="0,190,0,0" TextWrapping="Wrap" FontSize="17" FontFamily="Century Gothic" FontWeight="Light" Foreground="#616D72"/>

                <TextBlock x:Name="tituloTopico3Text" Text="texto" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,240,0,0" TextWrapping="Wrap" FontSize="22" FontFamily="Century Gothic" FontWeight="Bold" Foreground="#616D72"/>
                <TextBlock x:Name="descricaoTopico3Text" Text="texto" HorizontalAlignment="Left" VerticalAlignment="Top" Width="600" Margin="0,270,0,0" TextWrapping="Wrap" FontSize="17" FontFamily="Century Gothic" FontWeight="Light" Foreground="#616D72"/>

                <TextBlock x:Name="tituloTopico4Text" Text="texto" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,320,0,0" TextWrapping="Wrap" FontSize="22" FontFamily="Century Gothic" FontWeight="Bold" Foreground="#616D72"/>
                <TextBlock x:Name="descricaoTopico4Text" Text="texto" HorizontalAlignment="Left" VerticalAlignment="Top" Width="600" Margin="0,350,0,0" TextWrapping="Wrap" FontSize="17" FontFamily="Century Gothic" FontWeight="Light" Foreground="#616D72"/>
            </Grid>
        </Border>
    </Grid>
</Window>
